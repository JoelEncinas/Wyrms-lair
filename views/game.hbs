<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="./css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="./css/style.css" />

    <title>RPG</title>
  </head>
  <body>
    <div class="header">
      <h1>RPG</h1>
    </div>

    <div class="game">
      <h2 class="player-name"></h2>
      <h2>Log</h2>
      <textarea
        class="log"
        placeholder="Your adventure awaits..."
        readonly
      ></textarea>
      <div class="controls">
        <button class="north">North</button>
        <button class="east">East</button>
        <button class="south">South</button>
        <button class="west">West</button>
      </div>
    </div>

    <hr />
    <div class="footer">
      <button class="load-data">Load</button>
      <button class="erase-data">Clear</button>
    </div>

    <!-- Scripts -->
    <script src="./js/main.js" type="module"></script>
  </body>
</html>