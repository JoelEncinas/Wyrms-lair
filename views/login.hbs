<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/bootstrap.min.css" />
    <link rel="stylesheet" href="../css/styles.css" />
    <title>Login</title>
  </head>
  <body>

    {{> main_navbar}}

    <div id="login-main" class="main my-2 p-5">
      <h1 class="text-center">Login</h1>
      <form id="login-form" action="/auth/login" method="post">
        <div class="form-floating my-3">
          <input type="text" class="form-control" id="username" name="username" placeholder="Username" minlength="4" required>
          <label for="username">Username</label>
        </div>
        <div class="form-floating my-3">
          <input type="password" class="form-control" id="password" name="password" placeholder="Password" minlength="4" required>
          <label for="password">Password</label>
        </div>
        <div class="text-center my-3">
          <button class="btn btn-primary btn-lg" type="submit">Login</button>
        </div>
      </form>

      {{#if username_not_found}}
        {{> username_not_found}}
      {{/if}}

      {{#if invalid_credentials}}
        {{> invalid_credentials}}
      {{/if}}

      <div class="text-center mt-5">
        <p>Don't have an account? <a href="/auth/register">Register</a></p>
      </div>
    </div>

    <!-- BOOTSTRAP DEPENDENCIES -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.js"
    ></script>

  </body>
</html>